# Logging
LOG_LEVEL=INFO
LOG_STREAM=STDOUT
TZ=Europe/Berlin

# Inverter -> logger connection
DEYE_LOGGER_IP_ADDRESS=192.168.0.137
DEYE_LOGGER_PORT=8899
DEYE_LOGGER_SERIAL_NUMBER=3927602827
DEYE_LOGGER_PROTOCOL=tcp

# Read interval
DEYE_DATA_READ_INTERVAL=60

# Metrics (SUN-800-G3 is a microinverter class; start with micro)
DEYE_METRIC_GROUPS=micro,settings_micro,deye_micro_systemtime

# MQTT broker (local container)
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=deye

# Optional features
DEYE_FEATURE_MQTT_PUBLISHER=true
DEYE_PUBLISH_ON_CHANGE=true
DEYE_PUBLISH_ON_CHANGE_MAX_INTERVAL=360
