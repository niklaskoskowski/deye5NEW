TZ=Europe/Berlin

# MQTT
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_TOPIC_FILTER=deye/#

# HTTP endpoint (your webhosting PHP listener)
HTTP_ENDPOINT=https://YOURDOMAIN.TLD/deye_listener.php

# Optional: add a shared secret header for authentication
HTTP_AUTH_HEADER_NAME=X-Auth-Token
HTTP_AUTH_TOKEN=CHANGE_ME

# Optional: identify this site/device in payloads
SITE_ID=raspi-1

# Optional: batching (reduces HTTP requests)
BATCH_ENABLED=true
BATCH_MAX_MESSAGES=50
BATCH_MAX_SECONDS=5
